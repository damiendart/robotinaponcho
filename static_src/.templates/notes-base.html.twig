{% extends '.templates/base.html.twig' %}

{% set pageDescription = frontmatter.description %}
{% set pageSlug = frontmatter.slug  %}
{% set pageTitle = frontmatter.title %}

{% block pageContent %}
    <h1>{{ frontmatter.title | smartypants | widont }}</h1>
    <div class="admonition admonition--metadata">
        <ul class="metadata-list">
            <li class="metadata-list__item"><b>Last Updated</b>:
                <a data-timestamp="{{ inputFile.git.timestamp.getTime }}"
                   href="https://github.com/damiendart/robotinaponcho/commit/{{ inputFile.git.hash }}">
                   {{ inputFile.git.timestamp.getTime | date('d/m/Y') }}</a></li>
            <li class="metadata-list__item"><b>Licence</b>:
                <a href="http://creativecommons.org/licenses/by/4.0/">Creative
                    Commons Attribution 4.0 International License</a></li>
        </ul>
    </div>

    {{ renderedMarkdown | raw }}
{% endblock %}

