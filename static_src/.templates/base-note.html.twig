{% extends '.templates/base-markdown.html.twig' %}

{% set section = 'notes' %}

{% block content %}
    <h1>{{ title | smartypants | widont }}</h1>
    <ul class="sub-navigation-list sub-navigation-list--note">
        <li class="sub-navigation-list__item">
            {% if git.created.timestamp.getTime == git.updated.timestamp.getTime %}
                <b>Created<span class="screen-reader-only">:</span></b> <a data-timestamp="{{ git.created.timestamp.getTime }}"
                href="https://github.com/damiendart/robotinaponcho/commit/{{ git.created.hash }}">
                {{ git.created.timestamp.getTime | date('d/m/Y') }}</a>
            {% else %}
                <b>Updated<span class="screen-reader-only">:</span></b> <a data-timestamp="{{ git.updated.timestamp.getTime }}"
                href="https://github.com/damiendart/robotinaponcho/commit/{{ git.updated.hash }}">
                {{ git.updated.timestamp.getTime | date('d/m/Y') }}</a>
            {% endif %}
        </li>
        <li class="sub-navigation-list__item">
            <a href="https://creativecommons.org/licenses/by/4.0/">Creative Commons</a>
        </li>
    </ul>

    {{ renderedMarkdown | raw }}
{% endblock %}

{% block headCustom %}
    {{ parent() }}
    <link href="{{ urlBase }}notes/index.atom" rel="alternate" title="Damien Dartâ€™s Notes (www.robotinaponcho.net)" type="application/atom+xml">
{% endblock %}

