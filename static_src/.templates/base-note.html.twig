{% extends '.templates/base-markdown.html.twig' %}

{% set section = 'notes' %}

{% block content %}
    <h1>{{ title | smartypants | widont }}</h1>

    {% if git.created.timestamp.getTime == git.updated.timestamp.getTime %}
        <p><em>This page was created<span class="screen-reader-only">on</span>
            <a data-timestamp="{{ git.created.timestamp.getTime }}" href="https://github.com/damiendart/robotinaponcho/commit/{{ git.created.hash }}">
            {{ git.created.timestamp.getTime | date('d/m/Y') }}</a></em>.</p>
    {% else %}
        <p><em>This page was updated<span class="screen-reader-only">on</span>
            <a data-timestamp="{{ git.updated.timestamp.getTime }}" href="https://github.com/damiendart/robotinaponcho/commit/{{ git.updated.hash }}">
            {{ git.updated.timestamp.getTime | date('d/m/Y') }}</a></em>.</p>
    {% endif %}

    {{ renderedMarkdown | raw }}
{% endblock %}

{% block headCustom %}
    {{ parent() }}
    <link href="{{ urlBase }}notes/index.atom" rel="alternate" title="Damien Dartâ€™s Notes (www.robotinaponcho.net)" type="application/atom+xml">
{% endblock %}

