{% extends '.templates/base.html.twig' %}

{% set description = "View Damien Dart's notes on stuff and things." | smartypants %}
{% set title = 'Notes' %}

{% block content %}
    <h1>Notes</h1>
    <p>Notes on stuff and things.</p>
    <p>Also available as an <a href="{{ urlBase }}notes/index.atom">Atom feed</a>.</p>
    <ul class="notes-list">
        {% for note in collections.notes %}
            <li class="notes-list__item">
                <span class="notes-list__item__meta">{{ note.git.created.timestamp.getTime | date('d/m/Y') }}<span class="screen-reader-only">:</span></span>
                <a href="/{{ note.slug }}">{{ note.title }}</a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}

{% block headCustom %}
    {{ parent() }}
    <link href="{{ urlBase }}notes/index.atom" rel="alternate" title="Damien Dartâ€™s Notes (www.robotinaponcho.net)" type="application/atom+xml">
{% endblock %}
