!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "initial-scale=1.0, maximum-scale=1.0, user-scalable=no, width=device-width", "name" => "viewport"}
    :autoprefixscss
      a, a:active, a:focus, a:hover, a:visited {
        color: inherit;
        text-decoration: none }
      body {
        font: 100%/1.5 "Bitstream Vera Sans Mono", "Consolas", "Courier", monospace;
        margin: 0;
        text-align: center }
      .error_code {
        left:0;
        font-size: 10vw;
        line-height: 1em;
        margin: -0.5em auto 0 auto;
        padding: 0;
        position: absolute;
        top: 50%;
        width: 100% }
    %title #{error_code} (www.robotinaponcho.net)
  %body
    %h1.error_code <a href="/">#{error_code}</a>
