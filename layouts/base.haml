!!! 5
%html{:lang => "en", :prefix => "og: http://ogp.me/ns#"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => page_description, "name" => "description"}
    %meta{:content => "initial-scale=1.0, maximum-scale=1.0, width=device-width", "name" => "viewport"}
    %meta{:content => page_description, "property" => "og:description"}
    %meta{:content => "https://www.robotinaponcho.net/assets/og.png", :property => "og:image"}
    %meta{:content => page_title, :property => "og:title"}
    %meta{:content => "website", :property => "og:type"}
    %meta{:content => "https://www.robotinaponcho.net/#{page_slug}", :property => "og:url"}
    %script document.documentElement.className += "javascript";
    :autoprefixscss
      #{File.read("pages/#{page_scss}")}
    %title #{page_title} (www.robotinaponcho.net)
  %body
    %header.site-header
      %h1.site-header__title
        %a{:href => "/"} Damien Dart
      %ul.site-header__navigation-list
        %li.site-header__navigation-list__item.site-header__navigation-list__item--has-sub-menu
          %a{:href => "javascript:void(0);"} Projects
          %ul.site-header__navigation-list__item__sub-menu>
            %li.site-header__navigation-list__item__sub-menu__item
              %a{:href => "#"}> FlippyWindow (soon)
            %li.site-header__navigation-list__item__sub-menu__item
              %a{:href => "/art/"}> My Artwork and Drawings
            %li.site-header__navigation-list__item__sub-menu__item
              %a{:href => "/git/"}> Open Source Bits and Pieces
        %li.site-header__navigation-list__item
          %a{:href => "/notes/"} Notes
        %li.site-header__navigation-list__item.site-header__navigation-list__item--social
          %a{:href => "mailto:damiendart@gmail.com"}
            %img.site-header__navigation-list__item__icon{:alt => "Email", :src => "/assets/envelope.svg", :title => "My email address"}
        %li.site-header__navigation-list__item.site-header__navigation-list__item--social
          %a{:href => "https://github.com/damiendart"}
            %img.site-header__navigation-list__item__icon{:alt => "Github icon", :src => "/assets/github.svg", :title => "My Github profile" }
        %li.site-header__navigation-list__item.site-header__navigation-list__item--social
          %a{:href => "https://instagram.com/damiendart"}
            %img.site-header__navigation-list__item__icon{:alt => "Instagram icon", :src => "/assets/instagram.svg", :title => "My Instagram profile"}
        %li.site-header__navigation-list__item.site-header__navigation-list__item--social
          %a{:href => "https://twitter.com/damiendart"}
            %img.site-header__navigation-list__item__icon{:alt => "Twitter icon", :src => "/assets/twitter.svg", :title => "My Twitter profile"}
    = page_content
