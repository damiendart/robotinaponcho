{% extends '.templates/base-markdown.html.twig' %}

{% set section = 'notes' %}

{% block content %}
    {% if git.created.timestamp == git.updated.timestamp %}
        <p><em>This note was created on
            <a href="https://github.com/damiendart/robotinaponcho/commit/{{ git.created.hash }}">{{ git.created.timestamp | date('d M, Y \\a\\t H:i') }}</a>.</em></p>
    {% else %}
        <p><em>This note was updated on
            <a href="https://github.com/damiendart/robotinaponcho/commit/{{ git.updated.hash }}">{{ git.updated.timestamp | date('d M, Y \\a\\t H:i') }}</a>.</em></p>
    {% endif %}

    {{ renderedMarkdown | prettyratings }}
{% endblock %}

{% block headCustom %}
    {{ parent() }}
    <link href="{{ urlBase }}notes/index.atom" rel="alternate" title="Damien Dartâ€™s Notes (www.robotinaponcho.net)" type="application/atom+xml">
{% endblock %}

