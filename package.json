{
  "name": "robotinaponcho",
  "version": "0.1.0",
  "private": true,
  "bin": {
    "buildstatic": "./buildstatic",
    "buildstatic-js": "./bin/buildstatic"
  },
  "files": [
    "buildstatic",
    "bin/buildstatic"
  ],
  "dependencies": {
    "autoprefixer": "*",
    "chalk": "^2.4.2",
    "clean-css-cli": "*",
    "commander": "^3.0.1",
    "fs-extra": "*",
    "glob": "*",
    "html-minifier": "*",
    "lodash": "^4.17.15",
    "marked": "^0.7.0",
    "postcss-cli": "*",
    "rollup": "*",
    "rollup-plugin-uglify": "^6.0.2",
    "sass": "*",
    "svgo": "*",
    "twing": "^2.3.4",
    "uglify-js": "*"
  },
  "devDependencies": {
    "assets": "git+ssh://git@github.com/damiendart/assets.git#9027752c70a7f5f91cb56f098b808670b8fd736a",
    "toolbox-sass": "git+https://www.robotinaponcho.net/git/toolbox-sass.git#e27c5b8269d6d7bc776c26d656878e5b40997f7e",
    "matter-js": "*",
    "poly-decomp": "0.2.1"
  },
  "scripts": {
    "build": "npm run lastupdated && npm run build:vendor && npm run build:static && npm run build:assets",
    "build:assets": "node ./bin/buildstatic -i ./node_modules/assets/www.robotinaponcho.net -o ./public",
    "build:static": "node ./bin/buildstatic -i ./static_src -o ./public",
    "build:vendor": "cat ./node_modules/poly-decomp/build/decomp.min.js ./node_modules/matter-js/build/matter.js > ./static_src/assets/index-vendor.js",
    "clean": "rm -fr ./public",
    "prelastupdated": "git config filter.lastupdated.clean \"./bin/lastupdated\" && git config filter.lastupdated.smudge \"./bin/lastupdated %f\"",
    "lastupdated": "touch static_src/notes/*.twig && git checkout static_src/notes/*.twig"
  }
}
