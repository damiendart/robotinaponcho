!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "initial-scale=1.0, maximum-scale=1.0, user-scalable=no, width=device-width", "name" => "viewport"}
    %script #{`uglifyjs base.typekit.js -c --inline-script -m`}
    :scss
      #{File.read("base.scss")}
    %title #{title} (www.robotinaponcho.net)
  %body
    %header.header
      %h1.header__title Hello! I'm Damien Dart.
      %h2.header__subtitle I occasionally create things.
    %article.main-content{:class => defined?(homepage) ? "main-content--homepage" : nil}
      - if defined?(homepage)
        = body
      - else
        .main-content__container= body
    %footer.footer
      %hr.footer__rule
      %ul.footer__link-list
        - if defined?(homepage)
          %li.footer__link-list__item<>
            %a{:href => "mailto:damiendart@pobox.com"} Email
          %li.footer__link-list__item<>
            %a{:href => "https://github.com/damiendart"} GitHub
          %li.footer__link-list__item<>
            %a{:href => "https://instagram.com/damiendart"} Instagram
          %li.footer__link-list__item<>
            %a{:href => "http://blog.robotinaponcho.net/"} Tumblr
          %li.footer__link-list__item<>
            %a{:href => "https://twitter.com/damiendart"} Twitter
        - else
          %li.footer__link-list__item<>
            %a{:href => "/"} Back to Damien Dart's Homepage
      %p.footer__copyright Copyright &copy; #{Date.today.strftime("%Y")} Damien Dart
  - if defined?(javascript)
    %script= `uglifyjs #{javascript} -c --inline-script -m`
