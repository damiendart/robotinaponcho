!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "initial-scale=1.0, maximum-scale=1.0, user-scalable=no, width=device-width", "name" => "viewport"}
    %script #{`uglifyjs base.typekit.js -c --inline-script -m`}
    :scss
      #{File.read(scss_override) if defined?(scss_override)}
      #{File.read("base.scss")}
    %title #{title} (www.robotinaponcho.net)
  %body
    %article.body= body
    - if not defined?(error)
      %footer.footer
        %hr.footer__rule
        %p.footer__copyright Copyright &copy; #{Date.today.strftime("%Y")} Damien Dart
    - if defined?(javascript)
      %script= `uglifyjs #{javascript} -c --inline-script -m`
