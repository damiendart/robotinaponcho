USAGE="USAGE: $(basename "$0") HTDOCS-FOLDER PROTECTED-FOLDER GIT-HTTP-BACKEND"
[ "$#" -lt 3 ] && { printf "Not enough operands\n%s\n" "$USAGE" >&2; exit 2; }
for REPO in ${2%/}/git/*; do
  cp "$3" "${1%/}/git/$(basename "$REPO")"
done
