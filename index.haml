!!! 5
%html{:lang => "en", :prefix => "og: http://ogp.me/ns#"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "Visit the homepage of Damien Dart, a part-time illustrator and web developer.", "name" => "description"}
    %meta{:content => "initial-scale=1.0, maximum-scale=1.0, width=device-width", "name" => "viewport"}
    %meta{:content => "Visit the homepage of Damien Dart, a part-time illustrator and web developer.", "property" => "og:description"}
    %meta{:content => "https://www.robotinaponcho.net/assets/og.png", :property => "og:image"}
    %meta{:content => "Damien Dart's Homepage", :property => "og:title"}
    %meta{:content => "website", :property => "og:type"}
    %meta{:content => "https://www.robotinaponcho.net/", :property => "og:url"}
    %script= File.read("index.typekit.js")
    :autoprefixscss
      @import "index";
    %title Damien Dart's Homepage (www.robotinaponcho.net)
  %body
    %input.information-trigger#information-trigger{:type => "checkbox"}
    %label.toggle.toggle--open{:for => "information-trigger"} More Info
    #container
      %noscript Enable JavaScript for tumbling robots!
    .information
      .information__container
        .close-container
          %label.toggle{:for => "information-trigger"} Less Info
        :markdown
          #{File.read("index.markdown")}
    %script= File.read("index.js")
